{
  "extends": [
    "tslint:recommended",
    "tslint-react"
  ],
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "coverage/lcov-report/*.js"
    ]
  },
  "rules": {
    "no-console": false,
    "semicolon": true,
    "quotemark": {
      "options": "single"
    },
    "jsx-no-multiline-js": false,
    "trailing-comma": false,
    "arrow-parens": false,
    "jsx-wrap-multiline": false,
    "jsx-self-close": false,
    "jsx-alignment": false,
    "object-literal-sort-keys": false,
    "jsx-no-lambda": false,
    "member-access": false,
    "member-ordering": false
  }
}
